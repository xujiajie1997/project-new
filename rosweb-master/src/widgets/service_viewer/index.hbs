<div class="ros-widget" 
data-widget-name="service-viewer" 
data-min-height="80" data-min-width="140" 
data-max-height="1000" data-max-width="1000" 
data-height="300" data-width="400">

  <!--  META Tags to describe topics subscription -->
  <meta data-ros-service="1"
  data-ros-service-id="1"
  data-ros-service-desc="Service selector 1"
  data-ros-service-chng="service1Changed"
  data-ros-service-sltcd="" />

  <!-- The content which could be manipulated by widget class -->
  <div class="header">
    <p class="name">-- service name --</p>
    <p class="type">-- service type --</p>
  </div>
  <div class="details">
    Request
    <div class="service serviceRequest">
      <form>
      </form>
    </div>

    Response
    <div class="service serviceResponse"></div>

    <button type="button" class="jsWidgetServiceViewerCall">Call service</button>
    <button type="button" class="jsWidgetServiceViewerClear">Clear</button>
  </div>
</div>
