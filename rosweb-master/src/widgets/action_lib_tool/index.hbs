	<!-- The content which could be manipulated by widget class -->
	<div class="header">
		<p class="name">-- action server name --</p>
	</div>
  <div class="details">
    Goal
    <div class="actionserver goal">
      <form>
      </form>
      <!--<input type="number" class="jsWidgetActionLibToolTimeout" />-->
      <button class="jsWidgetActionLibToolSendGoal">Send goal</button>
      <button class="jsWidgetActionLibToolCancelGoal">Cancel</button>
    </div>
    Feedback
    <div class="actionserver feedback">
    </div>
    Result
    <div class="actionserver result">
    </div>
    Status
    <div class="actionserver status">
    </div>
  </div>
</div>